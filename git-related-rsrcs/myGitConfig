
#
# Attributes of user to apply/consult
#
[user]
    name = "fname lname"
    email = <mail-id e.g fname.lname@orgid.org>

#
# Attributes that are considered core by git
#
[core]
	editor = gvim
	autocrlf = input
	excludesfile = ~/.gitignore

[push]
	default = simple

[pull]
	rebase = true

[color]
	ui = auto

[diff]
	tool = meld
[difftool]
	prompt = false

# 
# Aliases one can use for various git commands
# git st is equivalent to calling git status
#
[alias]
	df = diff
	st = status
	br = branch
	ci = commit
	co = checkout
	gdiff = difftool
	ldiff = diff --name-only
	lg = log --graph --oneline --decorate --all


